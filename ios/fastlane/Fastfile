# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# For a list of all available actions, check out
#
#     https://docs.fastlane.tools/actions
#
# For a list of all available plugins, check out
#
#     https://docs.fastlane.tools/plugins/available-plugins
#

# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:ios)

platform :ios do
  # Build for simulator
  desc "Build for iOS Simulator"
  lane :build_simulator do
    UI.message "Building for iOS Simulator..."
    
    # Clean build
    clean_build_artifacts
    
    # Build for simulator
    build_app(
      workspace: "EventDiscovery.xcworkspace",
      scheme: "EventDiscovery",
      configuration: "Debug",
      destination: "generic/platform=iOS Simulator",
      clean: true,
      skip_archive: true
    )
    
    UI.success "✅ Build completed for iOS Simulator!"
  end
  
  # Build for device
  desc "Build for iOS Device"
  lane :build_device do
    UI.message "Building for iOS Device..."
    
    # Clean build
    clean_build_artifacts
    
    # Build for device
    build_app(
      workspace: "EventDiscovery.xcworkspace",
      scheme: "EventDiscovery",
      configuration: "Release",
      destination: "generic/platform=iOS",
      clean: true
    )
    
    UI.success "✅ Build completed for iOS Device!"
  end
  
  # Build and archive for distribution
  desc "Build and archive for distribution"
  lane :build_archive do
    UI.message "Building and archiving for distribution..."
    
    # Increment build number
    increment_build_number(xcodeproj: "EventDiscovery.xcodeproj")
    
    # Clean build
    clean_build_artifacts
    
    # Build and archive
    build_app(
      workspace: "EventDiscovery.xcworkspace",
      scheme: "EventDiscovery",
      configuration: "Release",
      destination: "generic/platform=iOS",
      clean: true,
      export_method: "app-store",
      export_options: {
        method: "app-store",
        provisioningProfiles: {
          "com.eventdiscovery.app" => "EventDiscovery_AppStore"
        }
      }
    )
    
    UI.success "✅ Build and archive completed!"
  end
  
  # Push to TestFlight
  desc "Push a new beta build to TestFlight"
  lane :beta do
    UI.message "Starting TestFlight deployment..."
    
    # Build and archive
    build_archive
    
    # Upload to TestFlight
    upload_to_testflight(
      skip_waiting_for_build_processing: true
    )
    
    UI.success "✅ Beta build uploaded to TestFlight!"
  end
  
  # Deploy to App Store
  desc "Deploy to App Store"
  lane :release do
    UI.message "Starting App Store deployment..."
    
    # Build and archive
    build_archive
    
    # Upload to App Store
    upload_to_app_store(
      skip_metadata: true,
      skip_screenshots: true,
      precheck_include_in_app_purchases: false
    )
    
    UI.success "✅ App deployed to App Store!"
  end
  
  # Clean build artifacts
  desc "Clean build artifacts"
  lane :clean do
    UI.message "Cleaning build artifacts..."
    
    clean_build_artifacts
    
    UI.success "✅ Build artifacts cleaned!"
  end
end

# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# For a list of all available actions, check out
#
#     https://docs.fastlane.tools/actions
#
# For a list of all available plugins, check out
#
#     https://docs.fastlane.tools/plugins/available-plugins
#

# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:ios)

platform :ios do
  desc "Push a new beta build to TestFlight"
  lane :beta do
    increment_build_number(xcodeproj: "EventDiscovery.xcodeproj")
    build_app(workspace: "EventDiscovery.xcworkspace", scheme: "EventDiscovery")
    upload_to_testflight
  end

  desc "Build the app for testing"
  lane :build do
    sh("pod install")
    UI.message "‚úÖ Pod install completed"
    UI.message "‚ö†Ô∏è  Note: Full build requires Xcode due to React Native dependencies"
    UI.message "üí° Use 'npm run ios' for development builds"
  end

  desc "Build the app without code signing (for development)"
  lane :build_dev do
    sh("pod install")
    build_app(
      workspace: "EventDiscovery.xcworkspace",
      scheme: "EventDiscovery",
      export_method: "development",
      configuration: "Debug",
      clean: true,
      skip_codesigning: true
    )
  end

  desc "Build the app without archiving (for testing)"
  lane :build_test do
    sh("pod install")
    sh("xcodebuild -workspace EventDiscovery.xcworkspace -scheme EventDiscovery -configuration Debug -destination 'generic/platform=iOS' build")
  end

  desc "Build and upload to TestFlight"
  lane :upload_testflight do
    increment_build_number(xcodeproj: "EventDiscovery.xcodeproj")
    sh("pod install")
    UI.message "‚ö†Ô∏è  Note: TestFlight upload requires code signing setup in Xcode"
    UI.message "üí° Please configure code signing manually in Xcode first:"
    UI.message "   1. Open EventDiscovery.xcworkspace in Xcode"
    UI.message "   2. Select EventDiscovery target"
    UI.message "   3. Go to Signing & Capabilities"
    UI.message "   4. Select your team and provisioning profile"
    UI.message "   5. Then run: fastlane upload_testflight"
  end

  desc "Build and upload to App Store"
  lane :upload_appstore do
    increment_build_number(xcodeproj: "EventDiscovery.xcodeproj")
    build_app(
      workspace: "EventDiscovery.xcworkspace",
      scheme: "EventDiscovery",
      export_method: "app-store",
      configuration: "Release"
    )
    upload_to_app_store(
      force: true,
      skip_metadata: true,
      skip_screenshots: true
    )
  end

  desc "Update version number"
  lane :version do |options|
    version = options[:version]
    increment_version_number(
      version_number: version,
      xcodeproj: "EventDiscovery.xcodeproj"
    )
  end

  desc "Clean build folder"
  lane :clean do
    clean_build_artifacts
    clear_derived_data
  end

  desc "Run tests"
  lane :test do
    scan(
      workspace: "EventDiscovery.xcworkspace",
      scheme: "EventDiscovery",
      device: "iPhone 15"
    )
  end

  desc "Setup code signing"
  lane :setup_codesigning do
    # This lane is for manual code signing setup
    # Use Xcode to configure code signing manually
    UI.message "Please configure code signing in Xcode manually:"
    UI.message "1. Open EventDiscovery.xcworkspace in Xcode"
    UI.message "2. Select EventDiscovery target"
    UI.message "3. Go to Signing & Capabilities"
    UI.message "4. Select your team and provisioning profile"
  end

  desc "Setup project dependencies"
  lane :setup do
    sh("pod install")
    UI.message "‚úÖ Project dependencies installed"
    UI.message "Next steps:"
    UI.message "1. Open EventDiscovery.xcworkspace in Xcode"
    UI.message "2. Configure code signing"
    UI.message "3. Run: fastlane build_dev"
  end
end
